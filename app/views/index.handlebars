<h1>Burgers</h1>

<h2>Not eaten!</h2>

<ul>
  {{#each burgers}}
    {{#unless devoured}}
      <li>{{name}}
      <button class="change-devoured" data-id="{{id}}" data-newdevour="true">
		Devour!
	</button></li>
    {{/unless}}
  {{/each}}
</ul>

<h2>Eaten!</h2>

<ul>
  {{#each burgers}}
    {{#if devoured}}
      <li>{{name}}</li>
    {{/if}}
  {{/each}}
</ul>

<h2>Add a Burger</h2>
<form class="create-form">

  <div class="form-group">
    <label for="ca">Burger Name:</label>
    <input type="text" id="ca" name="name">
  </div>

  <button type="submit">Add Burger</button>
</form>
